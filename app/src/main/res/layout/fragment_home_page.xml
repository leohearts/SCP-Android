<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/containerBg"
        android:paddingStart="7dp"
        android:paddingEnd="7dp">
        <!--    轮播图，下版本再加具体接口-->
        <!--        <com.youth.banner.Banner-->
        <!--            android:id="@+id/banner_home_page"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="200dp"-->
        <!--            android:layout_marginTop="14dp"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <GridLayout
            android:id="@+id/gl_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_entry_box"
            android:columnCount="3"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--白色圆角背景-->
            <info.free.scp.view.widget.EntryItem
                android:layout_width="match_parent"
                android:id="@+id/ei_scp"
                app:entryTitle="@string/entry_scp_series"
                app:count="3"
                app:imgSrc="@drawable/img_logo_cn" />

            <info.free.scp.view.widget.EntryItem
                android:layout_width="match_parent"
                android:id="@+id/ei_scp_cn"
                app:entryTitle="@string/entry_scp_cn_series"
                app:count="3"
                app:imgSrc="@drawable/img_logo_cn" />

            <info.free.scp.view.widget.EntryItem
                android:layout_width="match_parent"
                app:count="3"
                app:entryTitle="@string/entry_scp_story"
                app:imgSrc="@drawable/img_logo_cn" />

            <!--            <info.free.scp.view.widget.EntryItem-->
            <!--                android:layout_width="match_parent"-->
            <!--                app:entryTitle="@string/entry_scp_library"-->
            <!--                app:imgSrc="@drawable/img_logo_cn"-->
            <!--                app:count="3"/>-->

            <!--            <info.free.scp.view.widget.EntryItem-->
            <!--                android:layout_width="match_parent"-->
            <!--                app:entryTitle="@string/entry_scp_international"-->
            <!--                app:imgSrc="@drawable/img_logo_cn"-->
            <!--                app:count="3"/>-->

            <!--            <info.free.scp.view.widget.EntryItem-->
            <!--                android:layout_width="match_parent"-->
            <!--                app:entryTitle="@string/entry_scp_information"-->
            <!--                app:imgSrc="@drawable/img_logo_cn"-->
            <!--                app:count="3"/>-->
        </GridLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_recent_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_entry_box"
            app:layout_constraintTop_toBottomOf="@id/gl_entry">

            <TextView
                android:id="@+id/tv_recent_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="最近原创"
                android:textColor="?attr/darkText"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <info.free.scp.view.widget.ArticleListItem
                android:id="@+id/ali_recent_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:articleTitle="无尽走廊"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_header"
                app:rank="评分：10" />

            <info.free.scp.view.widget.ArticleListItem
                android:id="@+id/ali_recent_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:articleTitle="无尽走廊"
                app:layout_constraintTop_toBottomOf="@id/ali_recent_first"
                app:rank="评分：10" />

            <info.free.scp.view.widget.ArticleListItem
                android:id="@+id/ali_recent_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:articleTitle="无尽走廊"
                app:layout_constraintTop_toBottomOf="@id/ali_recent_second"
                app:rank="评分：10" />

            <Button
                android:id="@+id/btn_more_recent"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:text="查看更多"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ali_recent_third" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_recent_translate_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_entry_box"
            app:layout_constraintTop_toBottomOf="@id/cl_recent_list">

            <TextView
                android:id="@+id/tv_recent_translate_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="最近翻译"
                android:textColor="?attr/darkText"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <info.free.scp.view.widget.ArticleListItem
                android:id="@+id/ali_recent_translate_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:articleTitle="无尽走廊"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_translate_header"
                app:rank="评分：10" />

            <info.free.scp.view.widget.ArticleListItem
                android:id="@+id/ali_recent_translate_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:articleTitle="无尽走廊"
                app:layout_constraintTop_toBottomOf="@id/ali_recent_translate_first"
                app:rank="评分：10" />

            <info.free.scp.view.widget.ArticleListItem
                android:id="@+id/ali_recent_translate_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:articleTitle="无尽走廊"
                app:layout_constraintTop_toBottomOf="@id/ali_recent_translate_second"
                app:rank="评分：10" />

            <Button
                android:id="@+id/btn_more_recent_translate"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:text="查看更多"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ali_recent_translate_third" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_top_page_entry"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_widget_title"
            android:text="最高评分页面"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_recent_translate_list" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
