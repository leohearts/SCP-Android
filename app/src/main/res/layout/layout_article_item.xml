<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_article_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textColor="?attr/darkText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--要用spannableText-->
    <TextView
        android:id="@+id/tv_article_item_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="?attr/lightText"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_article_item_title"
        app:layout_constraintTop_toBottomOf="@id/tv_article_item_title" />
    <!--    目前没有相关数据-->
    <!--    <TextView-->
    <!--        android:id="@+id/tv_article_item_desc"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="编号：SCP-CN-1794 等级：Eclid"/>-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_read_later"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_article_item_bookmark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_bookmark_amber_700_24dp"
            app:layout_constraintBottom_toTopOf="@id/tv_article_item_read_later"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_article_item_read_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="待读"
            android:textColor="#FFAA00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_article_item_bookmark" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/dividerGray"
        app:layout_constraintTop_toBottomOf="@id/tv_article_item_rank" />
</androidx.constraintlayout.widget.ConstraintLayout>